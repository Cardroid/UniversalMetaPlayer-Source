<UserControl
    x:Class="UMP.Controller.Option.OptionControl.BasicOption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UMP.Controller.Option.OptionControl"
    mc:Ignorable="d">

    <WrapPanel
        Orientation="Vertical"
        Margin="5">

        <WrapPanel
            x:Name="FileSavePathPanel"
            Orientation="Horizontal"
            Margin="5,5,0,0">
            <Label
                Content="저장 폴더" />
            <Button
                x:Name="OpenDirectoryDialogButton"
                Style="{DynamicResource MaterialDesignFlatAccentBgButton}"
                Content="찾아보기" />
        </WrapPanel>
        <WrapPanel
            Orientation="Horizontal"
            ToolTip="로그에 더 자세한 사항을 기록합니다.&#10;개인 정보가 포함 될 수 있으나, 모든 정보는 익명으로 저장됩니다."
            Margin="5,5,0,0">
            <Label
                Content="자세한 로깅" />
            <ToggleButton
                x:Name="PrivateLogging"
                Style="{StaticResource MaterialDesignSwitchToggleButton}" />
        </WrapPanel>
    </WrapPanel>
</UserControl>
