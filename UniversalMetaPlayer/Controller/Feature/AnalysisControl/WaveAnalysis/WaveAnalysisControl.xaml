<UserControl
    x:Class="UMP.Controller.Feature.AnalysisControl.WaveAnalysisControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodel="clr-namespace:UMP.Controller.Feature.AnalysisControl"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <UserControl.DataContext>
        <viewmodel:WaveAnalysisControlViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <UserControl
            Content="{Binding PolylineWaveControl}"
            ToolTip="오디오 파형 그래프"
            Grid.Row="0" />
        <UserControl
            Content="{Binding SpectrumAnalyser}"
            ToolTip="주파수 그래프"
            Grid.Row="1" />
    </Grid>
</UserControl>
